<%- include("../partials/header") %>
<h1 style="text-align: center;">Edit <%= campground.name %> </h1>


<div class="container">
    <div class="row">
        <div style="width:40%; margin:25px auto">
            <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input type="text" class="form-control" name="campground[name]" id="name"
                        value="<%= campground.name %> " placeholder="Enter your name">
                </div>
                <div class="form-group">
                    <label for="image">Image URL</label>
                    <input type="text" name="campground[image]" class="form-control" id="image"
                        value="<%= campground.image %>" placeholder=" Enter image url">
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                    <input type="text" name="campground[description]" class="form-control" id="description"
                        value="<%= campground.description %>" placeholder=" Enter Description">
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-primary btn-block">
                </div>

            </form>
            <a href="/campgrounds">Go Back</a>
        </div>

    </div>


</div>
<%- include("../partials/footer") %>